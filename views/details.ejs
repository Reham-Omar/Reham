<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
    <main>

        <h1>Hello Word </h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/family">my family </a></li>
                <li><a href="/search">search books</a></li>
            </ul>
        </nav>
        <section>
            <%details.forEach((val,index)=>{ %>

            <div>
                <div class="upd">
                    <p>kind : <%=val.kind%></p>
                    <p>selfLink: <%=val.selflink%></p>
                    <p>title : <%=val.title%></p>
                    <p>authors : <%=val.authors%></p>
                    <p>type : <%=val.type%></p>
                    <button id="up">update</button>
                </div>
                

                <section id="det">
                    <form action="/update/<%=val.id%>?_method=put" method="post">
                        <input type="text" name='kind' value="<%=val.kind%>">
                        <input type="text" name='selfLink' value="<%=val.selflink%>">
                        <input type="text" name='title' value="<%=val.title%>">
                        <input type="text" name='authors' value="<%=val.authors%>">
                        <input type="text" name='type' value="<%=val.type%>">
                        <button type="submit">update details</button>
                    </form>
                </section>

            </div>

            <%});%>
        </section>
    </main>
    <footer>
        <p>all right reserved</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
    <script src="/js/app.js"></script>
</body>

</html>